<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base Application Theme. All common styling goes here. -->
    <style name="Base.TechHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Material shape attributes-->
<!--        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Owl.SmallComponent</item>-->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Owl.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Owl.LargeComponent</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Owl.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Owl.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Owl.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Owl.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Owl.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Owl.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Owl.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Owl.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Owl.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Owl.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Owl.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Owl.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Owl.Overline</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>

        <!--Default styles-->
        <item name="bottomNavigationStyle">@style/Widget.Owl.BottomNavigationView</item>
    </style>

    <style name="TechHub" parent="@style/Base.TechHub"/>
    "?attr/colorPrimary"

    <style name="TechHub.Light">
        <item name="colorPrimary">@color/polished_white</item>
        <item name="colorPrimaryVariant">@color/tech_anti_flash_white</item>
        <item name="colorPrimarySurface">@color/tech_anti_flash_white</item>
        <item name="colorSecondary">@color/dark_blue_grey</item>
        <item name="colorSecondaryVariant">@color/tech_matte_black</item>

    </style>

    <style name="TechHub.Yellow">
        <item name="colorPrimary">@color/tech_yellow_500</item>
        <item name="colorPrimaryVariant">@color/tech_yellow_400</item>
        <item name="colorSecondary">@color/tech_blue_700</item>
        <item name="colorSecondaryVariant">@color/tech_blue_800</item>
    </style>

    <style name="TechHub.Blue">
        <item name="colorPrimary">@color/tech_blue_700</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
    </style>

    <style name="TechHub.Orange">
        <item name="colorPrimary">@color/tech_deep_orange</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_pink_600</item>
    </style>

    <style name="TechHub.Blue.Prussian">
        <item name="colorPrimary">@color/tech_prussian_blue_dark</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
    </style>

    <style name="ThemeOverlay.TechHub.Blue" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/tech_blue_700</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="ThemeOverlay.TechHub.Blue.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/tech_blue_700</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="ThemeOverlay.TechHub.Orange.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/tech_deep_orange</item>
        <item name="colorPrimaryVariant">@color/tech_blue_800</item>
        <item name="colorSecondary">@color/tech_yellow_500</item>
        <item name="colorSecondaryVariant">@color/tech_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="TechHub.Pink">
        <item name="colorPrimary">@color/tech_pink_500</item>
        <item name="colorSecondary">@color/tech_pink_500</item>
        <item name="colorPrimaryVariant">@color/tech_pink_600</item>
        <item name="colorOnPrimary">#000</item>
        <item name="colorOnSurface">#000</item>
    </style>

    <style name="TechHub.Pink.Rose">
        <item name="colorPrimary">@color/tech_pink_500</item>
        <item name="colorPrimaryVariant">@color/tech_deep_pink</item>
        <item name="colorOnPrimary">@color/tech_anti_flash_white</item>
        <item name="colorPrimarySurface">@color/tech_pink_500</item>
        <item name="colorSecondary">@color/tech_matte_black</item>
        <item name="colorOnSurface">@color/tech_matte_black</item>
        <item name="colorSecondaryVariant">@color/tech_anti_flash_white</item>

    </style>

    <style name="TechHub.Pink.Variant" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/tech_pink_500</item>
        <item name="colorSecondary">@color/tech_blue_700</item>
        <item name="colorPrimaryVariant">@color/tech_pink_600</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorPrimaryContainer">@color/tech_pink_white</item>
        <item name="colorButtonNormal">@color/tech_persian_blue</item>
    </style>

    <style name="ThemeOverlay.TechHub.TransitionShapeAppearance.Small" parent="">
        <item name="transitionShapeAppearance">@style/ShapeAppearance.Owl.SmallComponent</item>
    </style>



</resources>
